<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">
      <h3 class="modify-information">Modify my profile Information</h3>
      <form class="form-size" action="/profile" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" class="form-control" value="">
        </div>
        <div class="form-group">
          <input type="file" name="photo" class="btn">
        </div>
        <div class="form-group">
          <label for="boardGame">I own these boardgames</label>
          <textarea type="text" name="boardGame" class="form-control" rows="5" value="
            <%= user.boardGame %>
          "></textarea>
        </div>
        <div class="form-group">
          <label for="type">I like these kinds of games</label>
          <textarea type="text" name="type" class="form-control" rows="5" value="
            <%= user.type %>
          "></textarea>
          </select>
        </div>
        <div class="form-group">
          <label for="description">Describe yourself in a few words</label>
          <textarea type="text" name="description" class="form-control" rows="5" value="
            <%= user.description %>
          "></textarea>
        </div>


        <button type="submit">Update Profile</button>
      </form>
    </div>
    <div class="col-sm-6">
      <div>
        <div class="around-image">
          <img src="
          <%= user.imgUrl%>
          " alt="profile pic" class="img-rounded">
        </div>
      </div>
      <dl class="dl-horizontal">
        <dt>Username</dt>
        <dd>
          <%= user.username %>
        </dd>
        <dt>Who am I ?</dt>
        <dd>
          <%= user.description %>
        </dd>
        <dt>Games I own</dt>
        <dd>
          <%= user.boardGame %>
        </dd>
        <dt>I like to play...</dt>
        <dd>
          <%= user.type %>
        </dd>
      </dl>
      <div>
        <p>I created these games</p>
        <% user._gamesCreated.forEach((gameCreated) => { %>

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= gameCreated.title %>
              </h5>
              <p class="card-text">
                <% if (gameCreated.description.length < 50) { %>
                  <%= gameCreated.description %>
                    <% } else { %>
                      <%= gameCreated.description.substring(0,50) %>...
                        <% }; %>
              </p>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <%= gameCreated.boardgame %>
                </li>
                <li class="list-group-item">
                  <%= gameCreated.time %>
                </li>
              </ul>
              <a href="/games/<%= gameCreated._id %>" class="btn btn-success">See Game !</a>
            </div>
          </div>
        <% }) %>
      </div>
      <div>
        <br>
        <p>I joined these games</p>
        <% user._games.forEach((game) => { %>
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  <%= game.title %>
                </h5>
                <p class="card-text">
                  <% if (game.description.length < 50) { %>
                    <%= game.description %>
                      <% } else { %>
                        <%= game.description.substring(0,50) %>...
                          <% }; %>
                </p>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">
                    <%= game.boardgame %>
                  </li>
                  <li class="list-group-item">
                    <%= game.time %>
                  </li>
                </ul>
                <a href="/games/<%= game._id %>" class="btn btn-success">See Game !</a>
              </div>
            </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
