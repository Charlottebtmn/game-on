<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">
      <form action="/profile" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" class="form-control">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea type="text" name="description" class="form-control">
        </div>
        <div class="form-group">
          <label for="imgUrl">Password</label>
          <input type="imgUrl" name="imgUrl" class="form-control">
        </div>
        <div class="form-group">
          <label for="_boardGame">I own these boardgames !</label>
          <input type="_boardGame" name="_boardGame" class="form-control">
        </div>
        <div class="form-group">
          <label for="type">I like to play these kinds of games...</label>
          <input type="type" name="type" class="form-control">
        </div>

        <button type="submit">Signup</button>
      </form>
    </div>
  </div>
</div>
